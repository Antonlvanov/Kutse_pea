﻿@{
    ViewBag.Title = "Tere tulemast peole!";
}

<div class="jumbotron">
    <h1>@ViewBag.Greeting, Kallis sõber!</h1>
</div>

<div>
    <p>@ViewBag.Message</p>
    @if (ViewBag.Message != null)
    {
        <div class="message">
            <p>@ViewBag.Message</p>
        </div>
    }
    @if (ViewBag.ImagePath != null)
    {
        <div class="img">
            <img src="@Url.Content(ViewBag.ImagePath)" alt="Kutse pilt" />
        </div>
    }
</div>

<div>
    @Html.ActionLink("Vastan", "Ankeet", "Ankeet", new { @class = "btn" })
</div>